{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "esnext",
		"module": "esnext",
		"rootDir": "typescript/src",
		"outDir": "./dist",
		"strict": true,
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["typescript/src/**/*.ts"],
	"exclude": ["node_modules"]
}
